<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUpFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageViewConfig"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/config_logo"
        app:layout_constraintEnd_toStartOf="@+id/textViewSetup"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView

        android:id="@+id/textViewSetup"
        android:layout_width="296dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="Game Setup"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewChoices"
        android:layout_width="13dp"
        android:layout_height="28dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/choix_logo"
        app:layout_constraintEnd_toStartOf="@+id/textViewChoices"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSetup"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="259dp"
        android:layout_height="138dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.717"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSetup">

        <RadioButton
            android:id="@+id/radioButtonTwoChoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 choices" />

        <RadioButton
            android:id="@+id/radioButtonThreeChoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 choices" />

        <RadioButton
            android:id="@+id/radioButtonFourChoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 choices" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewChoices"
        android:layout_width="172dp"
        android:layout_height="24dp"
        android:layout_marginTop="52dp"
        android:text="Number of choices :"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSetup" />

    <TextView
        android:id="@+id/textViewRegions"
        android:layout_width="137dp"
        android:layout_height="22dp"
        android:layout_marginTop="32dp"
        android:text="Available regions :"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <ImageView
        android:id="@+id/imageViewRegion"
        android:layout_width="19dp"
        android:layout_height="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/region_logo"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="151dp"
        android:layout_height="58dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_rounded"
        android:text="Go"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="247dp"
        android:layout_height="275dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonGo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegions">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Switch
                android:id="@+id/idSelectAll"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Select all" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/AfricaImage"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/afrique_logo"
                tools:ignore="MissingConstraints" />

            <Switch
                android:id="@+id/idAfrica"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Africa" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idNothAmericaImage"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/amerique_logo"
                tools:ignore="MissingConstraints" />

            <Switch
                android:id="@+id/idNorthAmerica"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="North America" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idSouthAmericaImage"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/amerique_logo"
                tools:ignore="MissingConstraints" />

            <Switch
                android:id="@+id/idSouthAmerica"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="South America" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idAsiaImage"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/asie_logo"
                tools:ignore="MissingConstraints" />

            <Switch
                android:id="@+id/idAsia"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Asia" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idEuropeImage"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/europe_logo"
                tools:ignore="MissingConstraints" />

            <Switch
                android:id="@+id/idEurope"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Europe" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idOceaniaImage"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/oceanie_logo"
                tools:ignore="MissingConstraints" />

            <Switch
                android:id="@+id/idOceania"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Oceania" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>