<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/Jouer"
        android:layout_width="199dp"
        android:layout_height="65dp"
        android:text="Set Up"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="277dp"
        android:layout_height="231dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.701"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Jouer">

        <RadioButton
            android:id="@+id/une_solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 solution" />

        <RadioButton
            android:id="@+id/deux_solutions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 solutions" />

        <RadioButton
            android:id="@+id/trois_solutions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 solutions" />

        <RadioButton
            android:id="@+id/quatre_solutions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 solutions" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="Nombre de solution"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Jouer" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="212dp"
        android:layout_height="69dp"
        android:layout_marginTop="56dp"
        android:text="Avec Timer"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="167dp"
        android:layout_height="91dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/avec_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="oui" />

        <RadioButton
            android:id="@+id/sans_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="non" />
    </RadioGroup>

    <Button
        android:id="@+id/lancer_partie"
        android:layout_width="151dp"
        android:layout_height="58dp"
        android:layout_marginTop="44dp"
        android:text="Go"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

</androidx.constraintlayout.widget.ConstraintLayout>